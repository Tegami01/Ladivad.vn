
@model IEnumerable<Model.DataModel.NewsDTO>

@{
    ViewBag.Title = "Quản lí tin tức";
}

<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                    <div class="col-md-12 row">
                        <div class="col-md-12">
                            <h4 class="card-title">Hot news</h4>
                            <hr />
                        </div>
                    </div>

                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-secondary">
                            <th>
                                Tiêu đề
                            </th>
                            <th>
                                Url
                            </th>
                            <th>
                                Ảnh đại diện
                            </th>
                            <th>
                                Thể loại
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th class="text-right">
                                <a class="btn btn-outline-dark" href="/Admin/News/Create">Thêm mới bài viết</a>
                            </th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.Url
                                        </td>
                                        <td>
                                            <img style="width: 200px ; height:100px" src="~/uploads/news/@item.ImgMain" />
                                        </td>
                                        <td>
                                            @if (item.Tags == "News")
                                            {
                                                <label>Tin tức</label>
                                            }
                                            else
                                            {
                                                <label>Dự án</label>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <label>Đã hoàn thành</label>
                                            }
                                            else
                                            {
                                                <label>Chưa hoàn thành</label>
                                            }
                                        </td>
                                        <td class="text-right">
                                            <a class="btn btn-outline-secondary" href="/Admin/News/Edit/@item.Id">
                                                Chi tiết
                                            </a>
                                            <a class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.Id">
                                                Xóa
                                            </a>

                                        </td>
                                    </tr>
                                    @Html.Action("Delete", "News", new { id = item.Id })
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>