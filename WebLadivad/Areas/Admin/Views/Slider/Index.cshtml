@model PagedList.IPagedList<Model.DataModel.SliderDTO>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lí slider";
}
<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Silder</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-secondary">
                            <th>
                                Ảnh
                            </th>
                            <th>
                                Url
                            </th>
                            <th class="text-right">
                                <a class="btn btn-outline-dark" href="/Admin/Slider/Create">Thêm mới Slider</a>
                            </th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <img style="width: 200px ; height:100px" src="~/uploads/slides/@item.Img" />
                                        </td>
                                        <td>
                                            @item.Url
                                        </td>
                                        <td class="text-right">
                                            <a class="btn btn-outline-secondary" href="/Admin/Slider/Edit/@item.Id">
                                                Chi tiết
                                            </a>
                                            <a class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.Id">
                                                Xóa
                                            </a>
                                        </td>
                                    </tr>
                                    @Html.Action("Delete", "Slider", new { id = item.Id })
                                }
                            </tbody>
                        </table>
                        @if (Model.Count > 0 && Model.PageCount > 1)
                        {
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

