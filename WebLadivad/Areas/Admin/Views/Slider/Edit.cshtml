@model Model.DataModel.SliderDTO
@{
    ViewBag.Title = "Edit";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
        function img_pathUrl(input) {
            $('#img_url')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);

            $('#btn-save').attr("disabled", false);
        }
</script>

}


<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card">
                @if (TempData["Message"] != null)
                {
                    <div class="row alert alert-success order-success" role="alert">
                        @TempData["Message"]
                    </div>
                }
                <div class="card-header">
                    <h4 class="card-title">Chi tiết silder</h4>
                    <hr />
                </div>
                @using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Nhập url</label>
                                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @placeholder = "Ví dụ : /chi-tiet", @class = "form-control" } })
                                </div>
                                <br />
                            </div>
                        </div>
                        <div class="text-center">
                            <img src="~/uploads/slides/@Model.Img" class="rounded mx-auto d-block img-fluid" id="img_url" alt="your image">
                            <br>
                            <input name="file" type="file" id="img_file" onChange="img_pathUrl(this);">
                        </div>
                        <div class="row">
                            <div class="col-10">
                                <div class="col-xl-6 col-lg-9 ">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <button name="button" id="btn-save" class="btn btn-outline-success" type="submit">Lưu Silder</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

