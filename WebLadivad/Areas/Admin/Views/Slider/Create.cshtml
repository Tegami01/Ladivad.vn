@model Model.DataModel.SliderDTO
@{
    ViewBag.Title = "Create";
}
@section style{
    <style>
        #img_url {
            background: #ddd;
            width: 100%;
            height: 675px;
            display: block;
        }
    </style>
}

@section scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function img_pathUrl(input) {
            $('#img_url')[0].src = (window.URL ? URL : webkitURL).createObjectURL(input.files[0]);

            $('#btn-save').attr("disabled", false);
        }
    </script>

}


<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Thêm mới silder</h4>
                    <hr />
                </div>
                @using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Nhập url</label>
                                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @placeholder = "Ví dụ : /chi-tiet", @class = "form-control" } })
                                </div>
                                <br />
                            </div>
                        </div>
                        <div class="text-center">
                            <img src="~/Content/no-image-800x600.png" class="rounded mx-auto d-block img-fluid" id="img_url" alt="your image">
                            <br>
                            <input name="file" type="file" id="img_file" onChange="img_pathUrl(this);">
                        </div>
                        <div class="row">
                            <div class="col-10">
                                <div class="col-xl-6 col-lg-9 ">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <button name="button" id="btn-save" class="btn btn-outline-success" disabled type="submit">Lưu Silder</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



