@model PagedList.IPagedList<Model.DataModel.ContactDTO>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Liên hệ của khách hàng";
}
<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="row">

                        @using (Html.BeginForm("Index", "Contact", FormMethod.Get))
                        {
                            <div class="col-md-12 row">
                                <div class="col-md-6">
                                    <h4 class="card-title">Liên hệ</h4>
                                    <hr />
                                </div>
                                <div class="col-md-6">
                                    <b class="col-2">
                                        Search:
                                    </b>
                                    <div class="col-12">
                                        @Html.TextBox("keyword", null, new { @class = "form-control col-md-12 " })
                                        <input type="hidden" name="keyword" class="btn btn-outline-secondary" value="Tìm kiếm" />
                                    </div>
                                </div>

                            </div>
                        }

                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-secondary">
                            <th>
                                Tên
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Ngày giửi
                            </th>
                            <th class="text-right">
                            </th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @item.FullName
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.PhoneNumber
                                        </td>
                                        <td>
                                            @item.Now
                                        </td>
                                        <td class="text-right">
                                            <a class="btn btn-outline-secondary" href="/Admin/Contact/Edit/@item.Id">
                                                Chi tiết
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Count > 0 && Model.PageCount > 1)
                        {
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
